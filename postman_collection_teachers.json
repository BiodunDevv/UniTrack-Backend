        },
        {
          "name": "8. Reject Share Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"reject\",\n  \"response_message\": \"Sorry, cannot share these students at this time.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/student-sharing/{{shareRequestId}}/respond",

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Support Request</title>
    <style>
      :root {
        --bg: #f5f5f7;
        --card: #ffffff;
        --text: #1d1d1f;
        --muted: #6e6e73;
        --border: #d2d2d7;
        --primary: #0071e3;
        --danger: #e74c3c;
        --warning: #f39c12;
        --success: #34c759;
        --footer-bg: #f5f5f7;
        --footer-text: #6e6e73;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --bg: #000000;
          --card: #1c1c1e;
          --text: #f5f5f7;
          --muted: #a1a1a6;
          --border: #2c2c2e;
          --primary: #0a84ff;
          --danger: #ff453a;
          --warning: #ffd60a;
          --success: #30d158;
          --footer-bg: #1c1c1e;
          --footer-text: #a1a1a6;
        }
      }

      body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Helvetica, Arial, sans-serif;
        line-height: 1.6;
        color: var(--text);
        background-color: var(--bg);
      }

      .email-container {
        max-width: 640px;
        margin: 0 auto;
        background-color: var(--card);
        border-radius: 16px;
        border: 1px solid var(--border);
        overflow: hidden;
      }

      .header {
        text-align: center;
        padding: 32px 20px;
        border-bottom: 1px solid var(--border);
      }
      .header h1 {
        margin: 0;
        font-size: 22px;
        font-weight: 600;
      }
      .header .subtitle {
        margin-top: 8px;
        font-size: 14px;
        color: var(--muted);
      }

      .priority-banner {
        text-align: center;
        padding: 14px;
        font-size: 14px;
        font-weight: 500;
      }
      .priority-urgent {
        color: var(--danger);
      }
      .priority-high {
        color: var(--warning);
      }
      .priority-medium {
        color: var(--primary);
      }
      .priority-low {
        color: var(--success);
      }

      .content {
        padding: 28px 24px;
      }

      .ticket-info {
        background-color: var(--bg);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 20px;
        margin: 24px 0;
        text-align: center;
      }
      .ticket-id {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 6px;
        font-family: "SF Mono", monospace;
      }
      .ticket-time {
        font-size: 13px;
        color: var(--muted);
      }

      .info-title {
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 15px;
      }
      .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
      }
      .info-item {
        background-color: var(--card);
        border: 1px solid var(--border);
        border-radius: 10px;
        padding: 12px;
      }
      .info-label {
        font-size: 12px;
        color: var(--muted);
        margin-bottom: 2px;
      }
      .info-value {
        font-size: 14px;
        font-weight: 500;
      }

      .message-section {
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 20px;
        margin: 28px 0;
      }
      .message-title {
        font-weight: 600;
        margin-bottom: 12px;
        font-size: 15px;
        color: var(--primary);
      }
      .message-content {
        font-size: 14px;
        line-height: 1.6;
      }

      .technical-details {
        background-color: var(--bg);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 20px;
        margin: 20px 0;
      }
      .technical-item {
        margin: 10px 0;
      }
      .technical-label {
        font-size: 13px;
        font-weight: 600;
      }
      .technical-value {
        font-size: 13px;
        color: var(--muted);
        font-family: "SF Mono", monospace;
      }

      .alert {
        padding: 16px;
        border-radius: 12px;
        margin: 24px 0;
        background-color: var(--bg);
        border: 1px solid var(--border);
        font-size: 14px;
      }

      .action-buttons {
        text-align: center;
        margin: 32px 0;
      }
      .btn {
        display: inline-block;
        padding: 12px 22px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s ease;
      }
      .btn-primary {
        background-color: var(--primary);
        color: #fff;
      }
      .btn-secondary {
        background-color: var(--muted);
        color: #fff;
      }
      .btn:hover {
        opacity: 0.9;
      }

      .footer {
        text-align: center;
        padding: 24px;
        font-size: 12px;
        color: var(--footer-text);
        border-top: 1px solid var(--border);
        background-color: var(--footer-bg);
      }
      .footer-links {
        margin-top: 10px;
      }
      .footer-links a {
        color: var(--footer-text);
        text-decoration: none;
        margin: 0 10px;
        font-size: 12px;
      }
      .footer-links a:hover {
        text-decoration: underline;
      }

      @media (max-width: 640px) {
        .info-grid {
          grid-template-columns: 1fr;
        }
        .btn {
          display: block;
          margin: 10px auto;
        }
      }
    </style>
  </head>
  <body>
    <div class="email-container">
      <!-- Header -->
      <div class="header">
        <h1>New Support Request</h1>
        <p class="subtitle">Admin Notification</p>
      </div>

      <!-- Priority Banner -->
      <div class="priority-banner priority-{{priority}}">
        {{priority}} Priority
      </div>

      <!-- Content -->
      <div class="content">
        <p>Hello Admin,</p>
        <p>
          A new support request was submitted in UniTrack. Review the details
          below.
        </p>

        <!-- Ticket Information -->
        <div class="ticket-info">
          <div class="ticket-id">#{{ticketId}}</div>
          <div class="ticket-time">Submitted: {{submittedAt}}</div>
        </div>

        <!-- User Information -->
        <div>
          <div class="info-title">User Information</div>
          <div class="info-grid">
            <div class="info-item">
              <div class="info-label">Name</div>
              <div class="info-value">{{userName}}</div>
            </div>
            <div class="info-item">
              <div class="info-label">Email</div>
              <div class="info-value">{{userEmail}}</div>
            </div>
            <div class="info-item">
              <div class="info-label">User Type</div>
              <div class="info-value">{{userType}}</div>
            </div>
            <div class="info-item">
              <div class="info-label">Category</div>
              <div class="info-value">{{category}}</div>
            </div>
          </div>
        </div>

        <!-- Request Details -->
        <div class="message-section">
          <div class="message-title">Subject: {{subject}}</div>
          <div class="message-content">{{message}}</div>
        </div>

        <!-- Technical Details -->
        {{#if browserInfo}}
        <div class="technical-details">
          <div class="info-title">Technical Information</div>
          <div class="technical-item">
            <div class="technical-label">IP Address</div>
            <div class="technical-value">{{ip_address}}</div>
          </div>
          <div class="technical-item">
            <div class="technical-label">User Agent</div>
            <div class="technical-value">{{user_agent}}</div>
          </div>
          {{#if browserInfo}}
          <div class="technical-item">
            <div class="technical-label">Browser Info</div>
            <div class="technical-value">{{browserInfo}}</div>
          </div>
          {{/if}}
        </div>
        {{/if}}

        <!-- Response Time Alert -->
        <div class="alert">
          ‚è∞ Expected response:  
          {{#if (eq priority "urgent")}}within 4-6 hours{{/if}}  
          {{#if (eq priority "high")}}within 24 hours{{/if}}  
          {{#if (eq priority "medium")}}within 1-2 business days{{/if}}  
          {{#if (eq priority "low")}}within 2-3 business days{{/if}}
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
          <a
            href="mailto:{{userEmail}}?subject=Re: Support Request {{ticketId}} - {{subject}}"
            class="btn btn-primary"
          >
            Reply to User
          </a>
          <a href="#" class="btn btn-secondary">View Dashboard</a>
        </div>
      </div>

      <!-- Footer -->
      <div class="footer">
        <div><strong>{{systemName}}</strong> Support Notification</div>
        <div class="footer-links">
          <a href="#">Dashboard</a>
          <a href="#">Support</a>
          <a href="#">System Status</a>
        </div>
      </div>
    </div>
  </body>
</html>

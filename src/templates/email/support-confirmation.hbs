<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Support Request Confirmation</title>
    <style>
      /* Light mode (default) */
      :root {
        --bg-color: #f2f2f7;
        --text-color: #1c1c1e;
        --card-bg: #ffffff;
        --border-color: #e5e5ea;
        --accent-green: #34c759;
        --accent-blue: #007aff;
        --secondary-text: #6e6e73;
      }

      /* Dark mode */
      @media (prefers-color-scheme: dark) {
        :root {
          --bg-color: #000000;
          --text-color: #ffffff;
          --card-bg: #1c1c1e;
          --border-color: #3a3a3c;
          --accent-green: #30d158;
          --accent-blue: #0a84ff;
          --secondary-text: #98989d;
        }
      }

      body {
        margin: 0;
        padding: 0;
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        line-height: 1.5;
      }

      .email-container {
        max-width: 600px;
        margin: 0 auto;
        background: var(--card-bg);
        border-radius: 12px;
        border: 1px solid var(--border-color);
        overflow: hidden;
      }

      .header {
        text-align: center;
        padding: 32px 20px 20px;
      }

      .header h1 {
        margin: 0;
        font-size: 22px;
        font-weight: 600;
      }

      .subtitle {
        margin-top: 8px;
        font-size: 14px;
        color: var(--secondary-text);
      }

      .success-banner {
        text-align: center;
        padding: 16px;
        font-size: 15px;
        color: var(--accent-green);
        border-top: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
      }

      .content {
        padding: 24px 20px;
        font-size: 15px;
      }

      .ticket-card {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 20px;
        text-align: center;
        margin: 24px 0;
      }

      .ticket-id {
        font-family: Menlo, monospace;
        font-size: 18px;
        margin-bottom: 10px;
      }

      .ticket-status {
        display: inline-block;
        background: var(--accent-green);
        color: #fff;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
      }

      .info-section {
        margin: 24px 0;
        border-top: 1px solid var(--border-color);
        padding-top: 16px;
      }

      .info-title {
        font-weight: 600;
        font-size: 15px;
        margin-bottom: 12px;
      }

      .info-item {
        margin: 8px 0;
      }

      .info-label {
        font-size: 13px;
        color: var(--secondary-text);
      }

      .info-value {
        font-size: 15px;
      }

      .message-preview {
        margin: 20px 0;
        padding: 16px;
        border: 1px solid var(--border-color);
        border-radius: 10px;
        font-size: 14px;
        color: var(--secondary-text);
        font-style: italic;
      }

      .alert {
        margin: 20px 0;
        padding: 14px;
        border-radius: 10px;
        font-size: 14px;
        background: var(--border-color);
      }

      .timeline-section {
        margin: 24px 0;
        border-top: 1px solid var(--border-color);
        padding-top: 16px;
      }

      .timeline-item {
        margin: 12px 0;
      }

      .timeline-step {
        font-weight: 500;
      }

      .timeline-description {
        font-size: 14px;
        color: var(--secondary-text);
      }

      .contact-card {
        margin: 24px 0;
        padding: 20px;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        text-align: center;
        font-size: 14px;
      }

      .footer {
        text-align: center;
        font-size: 12px;
        color: var(--secondary-text);
        padding: 16px;
        border-top: 1px solid var(--border-color);
      }

      a {
        color: var(--accent-blue);
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <div class="email-container">
      <!-- Header -->
      <div class="header">
        <h1>Support Request Received</h1>
        <p class="subtitle">We have successfully logged your request</p>
      </div>

      <!-- Success Banner -->
      <div class="success-banner">
        ‚úÖ Thank you, <strong>{{userName}}</strong>. Your support ticket has been submitted.
      </div>

      <!-- Content -->
      <div class="content">
        <p>Your request has been assigned a unique ticket number for tracking.</p>

        <!-- Ticket Information -->
        <div class="ticket-card">
          <div class="ticket-id">{{ticketId}}</div>
          <div class="ticket-status">Submitted</div>
        </div>

        <!-- Request Summary -->
        <div class="info-section">
          <div class="info-title">Request Summary</div>
          <div class="info-item"><div class="info-label">Subject</div><div class="info-value">{{subject}}</div></div>
          <div class="info-item"><div class="info-label">Category</div><div class="info-value">{{category}}</div></div>
          <div class="info-item"><div class="info-label">Priority</div><div class="info-value">{{priority}}</div></div>
          <div class="info-item"><div class="info-label">Submitted</div><div class="info-value">{{submittedAt}}</div></div>
        </div>

        <!-- Message -->
        <div class="message-preview">
          "{{message}}"
        </div>

        <!-- Alert -->
        <div class="alert">
          ‚è∞ Expected Response: {{expectedResponse}}
        </div>

        <!-- Timeline -->
        <div class="timeline-section">
          <div class="timeline-item">
            <div class="timeline-step">Request Submitted</div>
            <div class="timeline-description">Your support request has been logged.</div>
          </div>
          <div class="timeline-item">
            <div class="timeline-step">Admin Notified</div>
            <div class="timeline-description">Our team has been notified and will review it.</div>
          </div>
          <div class="timeline-item">
            <div class="timeline-step">Under Review</div>
            <div class="timeline-description">An admin is checking your issue.</div>
          </div>
          <div class="timeline-item">
            <div class="timeline-step">Response Sent</div>
            <div class="timeline-description">You will receive a reply via email.</div>
          </div>
        </div>

        <!-- Contact -->
        <div class="contact-card">
          üìû Need urgent help? Contact your system administrator.
        </div>
      </div>

      <!-- Footer -->
      <div class="footer">
        {{systemName}} ‚Ä¢ Automated Support Confirmation
      </div>
    </div>
  </body>
</html>
